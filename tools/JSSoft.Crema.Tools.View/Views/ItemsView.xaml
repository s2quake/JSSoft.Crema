<UserControl x:Class="Ntreev.Crema.Tools.View.Views.ItemsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:nmfc="clr-namespace:Ntreev.ModernUI.Framework.Controls;assembly=Ntreev.ModernUI.Framework"
             xmlns:nmfm="clr-namespace:Ntreev.ModernUI.Framework.Markup;assembly=Ntreev.ModernUI.Framework"
             xmlns:nmfv="clr-namespace:Ntreev.ModernUI.Framework.Views;assembly=Ntreev.ModernUI.Framework"
             xmlns:local="clr-namespace:Ntreev.Crema.Tools.View.Views"
             mc:Ignorable="d" AllowDrop="True" nmfc:DragDropUtility.DropCommand="{Binding LoadCommand}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170" />
            <ColumnDefinition Width="9" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- link list -->
        <ListBox x:Name="LinkList" ItemsSource="{Binding ItemsSource}" SelectedItem="{Binding SelectedItem, RelativeSource={RelativeSource TemplatedParent}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Margin="10,2,2,2" FontSize="{DynamicResource SmallFontSize}" TextTrimming="CharacterEllipsis" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- seperator -->
        <GridSplitter  Grid.Column="1" Width="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

        <!-- content -->
        <ContentControl Grid.Column="2" cal:View.Model="{Binding SelectedItem, ElementName=LinkList}" />

        <nmfc:ProgressContent Visibility="{nmfm:VisibilityBinding IsProgressing}" Grid.ColumnSpan="3" d:IsHidden="True" />

    </Grid>
</UserControl>
