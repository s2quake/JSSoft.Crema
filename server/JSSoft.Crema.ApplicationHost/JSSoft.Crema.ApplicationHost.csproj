<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <Import Project="..\..\wpf.props" />
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <AssemblyName>cremaserverApp</AssemblyName>
    <Product>Crema Server App</Product>
    <OutputPath>$(ExePath)server\application</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Caliburn.Micro" Version="4.0.105-alpha" />
    <PackageReference Include="Caliburn.Micro.Core" Version="4.0.105-alpha" />
    <PackageReference Include="ModernUI.WPFCore" Version="2.0.0" />
  </ItemGroup>
  <ItemGroup Condition="$(TargetFramework.StartsWith('netcoreapp3.'))" >
    <PackageReference Include="MahApps.Metro" Version="2.1.1" />
    <PackageReference Include="Microsoft-WindowsAPICodePack-Core" Version="1.1.4" />
    <PackageReference Include="Microsoft-WindowsAPICodePack-Shell" Version="1.1.4" />
  </ItemGroup>
  <ItemGroup Condition="$(TargetFramework.StartsWith('net4'))">
    <PackageReference Include="MahApps.Metro" Version="1.6.5" />
    <PackageReference Include="Microsoft.WindowsAPICodePack.Shell" Version="1.1.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\common\Ntreev.Crema.ServiceModel\Ntreev.Crema.ServiceModel.csproj" />
    <ProjectReference Include="..\Ntreev.Crema.Commands\Ntreev.Crema.Commands.csproj" />
    <ProjectReference Include="..\Ntreev.Crema.RuntimeService\Ntreev.Crema.RuntimeService.csproj" />
    <ProjectReference Include="..\Ntreev.Crema.ServiceHosts\Ntreev.Crema.ServiceHosts.csproj" />
    <ProjectReference Include="..\Ntreev.Crema.Services\Ntreev.Crema.Services.csproj" />
    <ProjectReference Include="..\..\..\Ntreev.Library.Commands\Ntreev.Library.Commands\Ntreev.Library.Commands.csproj" />
    <ProjectReference Include="..\..\..\Ntreev.Library\Ntreev.Library\Ntreev.Library.csproj" />
    <ProjectReference Include="..\..\..\Ntreev.ModernUI.Framework\Ntreev.ModernUI.Framework\Ntreev.ModernUI.Framework.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PluginsDir Include="$(OutputPath)\..\cremaserver\plugins\**\*" />
    <RepoModuleDir Include="$(OutputPath)\..\cremaserver\repo-modules\**\*" />
    <SerializerDir Include="$(OutputPath)\..\cremaserver\serializers\**\*" />
  </ItemGroup>
  <Target Name="Copy-Files" AfterTargets="CopyFilesToOutputDirectory">
    <Copy SourceFiles="@(PluginsDir)" DestinationFiles="@(PluginsDir->'$(OutputPath)\plugins\%(RecursiveDir)%(Filename)%(Extension)')" />
    <Copy SourceFiles="@(RepoModuleDir)" DestinationFiles="@(RepoModuleDir->'$(OutputPath)\repo-modules\%(RecursiveDir)%(Filename)%(Extension)')" />
    <Copy SourceFiles="@(SerializerDir)" DestinationFiles="@(SerializerDir->'$(OutputPath)\serializers\%(RecursiveDir)%(Filename)%(Extension)')" />
  </Target>
</Project>