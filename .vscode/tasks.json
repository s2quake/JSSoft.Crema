            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build server",
            "command": "dotnet build server.sln --framework netcoreapp3.1",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build server-console",
            "command": "dotnet build ./server/JSSoft.Crema.ConsoleHost --framework netcoreapp3.1",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build client-console",
            "command": "dotnet build ./client/JSSoft.Crema.ConsoleHost --framework netcoreapp3.1",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
